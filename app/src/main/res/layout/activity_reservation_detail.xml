<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bamin"
        android:text="예약하기"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="134dp"
        android:layout_height="80dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="97dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/nameEditText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_bias="0.467">

        <RadioButton
            android:id="@+id/radioLunch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="오전"
            app:layout_constraintBottom_toTopOf="@id/nameEditText1"
            app:layout_constraintEnd_toStartOf="@id/radioNight"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Line" />

        <RadioButton
            android:id="@+id/radioNight"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="오후"
            app:layout_constraintBottom_toTopOf="@id/nameEditText1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/radioLunch"
            app:layout_constraintTop_toBottomOf="@id/Line" />
    </RadioGroup>

    <TextView
        android:id="@+id/inputText"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="예약자 성함"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/nameEditText1"
        app:layout_constraintEnd_toStartOf="@id/nameEditText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameEditText1" />


    <EditText
        android:id="@+id/nameEditText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:hint="   예약자명"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/nameEditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputText"
        app:layout_constraintTop_toTopOf="@id/Line"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/inputText2"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="인원수"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/nameEditText2"
        app:layout_constraintEnd_toStartOf="@id/nameEditText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameEditText2" />


    <Spinner
        android:id="@+id/nameEditText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="50dp"
        android:hint="인원수"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/inputText"
        app:layout_constraintTop_toBottomOf="@id/nameEditText1"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/inputText3"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="시간"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/nameEditText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEditText2" />


    <Spinner
        android:id="@+id/nameEditText3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/button222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputText3"
        app:layout_constraintTop_toTopOf="@id/inputText3"
        android:layout_marginEnd="50dp"
        app:layout_constraintVertical_bias="0.291" />


    <Spinner
        android:id="@+id/nameEditText4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:textSize="12sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputText3"
        app:layout_constraintTop_toTopOf="@id/inputText3"
        android:layout_marginEnd="50dp"
        app:layout_constraintVertical_bias="0.291" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button222"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="500dp"
        android:backgroundTint="#95E8E0"
        android:text="예약하기"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nameEditText2"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>